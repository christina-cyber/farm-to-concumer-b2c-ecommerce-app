generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  FARMER
  DELIVERY_PARTNER
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  PICKED
  DELIVERED
  CANCELLED
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  farmerProfile   FarmerProfile?
  deliveryProfile DeliveryPartner?
  orders          Order[]          @relation("CustomerOrders")
  reviews         Review[]
}

model FarmerProfile {
  id             Int    @id @default(autoincrement())
  userId         Int    @unique
  user           User   @relation(fields: [userId], references: [id])
  farmName       String
  latitude       Float
  longitude      Float
  address        String
  commissionRate Float  @default(10.0) // Percentage

  products Product[]
  orders   Order[]
}

model Product {
  id          Int           @id @default(autoincrement())
  farmerId    Int
  farmer      FarmerProfile @relation(fields: [farmerId], references: [id])
  name        String
  category    String
  pricePerKg  Float
  stockKg     Float
  harvestDate DateTime
  isDeleted   Boolean       @default(false)

  orderItems OrderItem[]
}

model DeliveryPartner {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  user        User    @relation(fields: [userId], references: [id])
  vehicleType String
  currentLat  Float?
  currentLong Float?
  isAvailable Boolean @default(true)

  orders Order[]
}

model Order {
  id                Int              @id @default(autoincrement())
  customerId        Int
  customer          User             @relation("CustomerOrders", fields: [customerId], references: [id])
  farmerId          Int
  farmer            FarmerProfile    @relation(fields: [farmerId], references: [id])
  deliveryPartnerId Int?
  deliveryPartner   DeliveryPartner? @relation(fields: [deliveryPartnerId], references: [id])

  status      OrderStatus @default(PENDING)
  totalAmount Float
  deliveryFee Float
  platformFee Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Tracking
  currentLat         Float?
  currentLong        Float?
  lastLocationUpdate DateTime?

  items OrderItem[]
}

model OrderItem {
  id          Int     @id @default(autoincrement())
  orderId     Int
  order       Order   @relation(fields: [orderId], references: [id])
  productId   Int
  product     Product @relation(fields: [productId], references: [id])
  quantity    Float
  priceAtTime Float
}

model Review {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  rating     Int
  comment    String?
  entityId   Int
  entityType String
  createdAt  DateTime @default(now())
}
